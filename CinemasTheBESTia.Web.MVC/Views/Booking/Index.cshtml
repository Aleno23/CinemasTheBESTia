@model CinemasTheBESTia.Web.MVC.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Booking";
}

<h2>Movie @Model.OriginalTitle</h2>
<h3>Please enter number of tickets</h3>

@if (ViewContext.ModelState.IsValid == false)
{
    <div class="alert alert-danger">
        <strong>Error</strong>
        <div asp-validation-summary="All" class="danger"></div>
    </div>
}

<div>

    <hr />
    @if (Model.AvailableSeats > 0)
    {
        <form method="post">
            <div class="col-md-2 ">
                <label asp-for="AvailableSeats"></label>
            </div>
            <div class="col-md-2">
                @Model.AvailableSeats
                <input type="hidden" asp-for="@Model.AvailableSeats">

            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-2 ">
                    <label asp-for="NumberOfTickets"></label>
                </div>
                <div class="col-md-2">
                    <input autofocus asp-for="NumberOfTickets" type="number" />
                </div>
                <div class="col-md-2 ">
                    <label asp-for="PricePerTicket"></label>
                </div>
                <div class="col-md-2">
                    $@Model.PricePerTicket"
                    <input type="hidden" asp-for="@Model.PricePerTicket">

                </div>
                @*<div class="col-md-2 ">

                        <label asp-for="TotalPrice"></label>
                    </div>


                    <div class="col-md-2">
                        @Model.TotalPrice"
                    </div>*@




                <input type="hidden" asp-for="OriginalTitle" />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CinemaFuctionId" />

                <div class="col-md-12">
                    <button formmethod="post" asp-action="GoToPay" asp-controller="Booking"
                            class="btn btn-info" name="button" value="register">
                        Continue
                    </button>
                </div>
            </div>
        </form>
    }
    else
    {
        <h1>There are not available tickets for the movie</h1>
    }

</div>
<div class="clearfix"></div>

<div class="row clearfix">
    <br />
    <a asp-action="Details" asp-controller="Movies" asp-route-id="@Model.Id">Back to Movie DetailsList</a>
</div>

<div class="clearfix"></div>
<div class="row clearfix">
    <a asp-action="Index" asp-controller="Movies">Back to List</a>
</div>
