@model CinemasTheBESTia.Web.MVC.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Booking";
}

<h2>Movie @Model.OriginalTitle</h2>
<h3>Confirm Purchase</h3>

@if (ViewContext.ModelState.IsValid == false)
{
    <div class="alert alert-danger">
        <strong>Error</strong>
        <div asp-validation-summary="All" class="danger"></div>
    </div>
}

<div>
    <hr />
    <form method="post">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-2 ">
                <label asp-for="NumberOfTickets"></label>
            </div>
            <div class="col-md-2">
                <input readonly asp-for="NumberOfTickets" type="number" />
            </div>
            <div class="col-md-2 ">
                <label asp-for="PricePerTicket"></label>
            </div>
            <div class="col-md-2">
                $@Model.PricePerTicket"
                <input type="hidden" asp-for="@Model.PricePerTicket">

            </div>

        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-2 ">
                <label asp-for="TotalPrice"></label>
            </div>


            <div class="col-md-2">
                <h3 class="text-danger"> $@Model.TotalPrice"</h3>
            </div>

        </div>
        <input type="hidden" asp-for="AvailableSeats">
        <input type="hidden" asp-for="OriginalTitle" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CinemaFuctionId" />
        <input type="hidden" asp-for="TotalPrice" />

        <div class="col-md-2">
            <button formmethod="post" asp-action="Reserver" asp-controller="Booking"
                    class="btn btn-danger" name="button" value="register">
                Confirm and pay
            </button>
        </div>

    </form>
</div>
<div class="clearfix"></div>

<div class="row clearfix">
    <br />
    <a asp-action="Details" asp-controller="Movies" asp-route-id="@Model.Id">Back to Movie DetailsList</a>
</div>

<div class="clearfix"></div>
<div class="row clearfix">
    <a asp-action="Index" asp-controller="Movies">Back to List</a>
</div>

