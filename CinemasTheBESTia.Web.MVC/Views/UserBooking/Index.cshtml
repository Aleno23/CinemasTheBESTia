@model IEnumerable<CinemasTheBESTia.Entities.CinemaFunctions.CinemaReservation>


<h2>Movies</h2>


@if (!Model.Any())
{
    <p>There are not bookings to show</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th></th>
                <th>OriginalMovieTitle</th>
                <th>FunctionDateTime</th>
                <th>TotalPaid</th>
                <th>TotalTickets</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
            <tr>
                <td> <a asp-action="Details" asp-controller="UserBooking" asp-route-id="@booking.Id">Cancel</a> </td>

                <td>@booking.OriginalMovieTitle</td>
                <td>@booking.CinemaFunction.FunctionDateTime</td>
                <td>@booking.TotalPaid</td>
                <td>@booking.TotalTickets</td>
            </tr>
            }
        </tbody>
    </table>
}

